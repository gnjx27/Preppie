{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "skipLibCheck": true,
    "moduleResolution": "node"
  },
  "compileOnSave": true,
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules/**/*",
    "../node_modules/**/*",
    "../**/*.d.ts",
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}